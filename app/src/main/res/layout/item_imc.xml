<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/relativeRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200">

        <LinearLayout
            android:id="@+id/linear01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Septiembre" />

            <TextView
                android:id="@+id/tvDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="25" />

            <TextView
                android:id="@+id/tvAnyo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="2020" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@id/linear03"
            android:layout_toEndOf="@+id/linear01"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                tools:text="Normal" />

            <TextView
                android:id="@+id/tvSexo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                tools:text="Hombre" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPesoItemList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    tools:text="Peso: 55" />

                <TextView
                    android:id="@+id/tvAlturaItemList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    tools:text="Altura: 174" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvIDbd"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                tools:text="id" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelIMCHistorico"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIMChistorico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="24.58" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>